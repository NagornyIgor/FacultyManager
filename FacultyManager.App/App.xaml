             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FacultyManager.Applicatiion"
             Startup="Application_Startup">
    <Application.Resources>
        <Style x:Key="buttonStyle" TargetType="Button">
